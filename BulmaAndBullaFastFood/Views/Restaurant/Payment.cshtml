@model IEnumerable<BulmaAndBullaFastFood.Models.MenuItem>

@{
    ViewBag.Title = "Payment";
}

<h2 style="text-align:center;">Payment</h2>
<br>
<h3>Items to purchase</h3>

<table>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
            </tr>
        }
    }
</table>

<br>
<h5>Subtotal: @Session["subtotal"].ToString()</h5>
<h5>Taxes: @Session["taxes"].ToString()</h5>

@if (Session["subtotal"].ToString() == "0")
{
    <h5>Delivery: @Session["delivery"].ToString() . We charge no delivery for orders with a subtotal higher than 25$!</h5>
}
else
{
    <h5>Delivery: @Session["delivery"].ToString()</h5>
}

<h5>Total: @Session["total"].ToString()</h5>

