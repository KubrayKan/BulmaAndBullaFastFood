@model BulmaAndBullaFastFood.Models.IndexViewModel

@{
    ViewBag.Title = "Manage Account";
}

<h3>@ViewBag.Title</h3>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h5>Change your account settings</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            @Html.ActionLink("Change your password", "ChangePassword", routeValues: null, htmlAttributes: new { @class = "btn btn-light m-1" })
        </dd>
        <dt>Delete Account</dt>
        <dd>
            @Html.ActionLink("Delete Account", "DeleteAccount", routeValues: null, htmlAttributes: new { @class = "btn btn-light m-1" })
        </dd>
    </dl>
</div>